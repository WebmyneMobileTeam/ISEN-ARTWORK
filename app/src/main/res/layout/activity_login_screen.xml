<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context="com.xitij.android.isen_artwork.ui.LoginScreen">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        style="@style/both_wrap_content"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/logo"
            style="@style/both_wrap_content" />

        <TextView
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="QUICK REGISTRATION"
            style="@style/both_wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="16dp"

        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        style="@style/match_wrap_content"
        android:orientation="vertical">

        <EditText
            android:background="@drawable/ed_rounded"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:text="DD0001"
            android:id="@+id/edName"
            android:padding="8dp"
            style="@style/match_wrap_content" />

        <EditText
            android:background="@drawable/ed_rounded"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:text="123456"
            android:id="@+id/edPassword"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            style="@style/match_wrap_content" />

        <Button
            android:layout_marginRight="48dp"
            android:id="@+id/btnLogin"
            android:layout_marginTop="8dp"
            android:textSize="22sp"
            android:layout_gravity="right"
            android:textColor="#fff"
            android:text="Login"
            android:background="#00000000"
            android:padding="8dp"
            style="@style/both_wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        style="@style/both_wrap_content">

        <TextView
            android:textColor="@android:color/white"
            android:text="SIGN UP"
           style="@style/both_wrap_content" />

        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/white"
            android:text="ABOUT ISEN"
            style="@style/both_wrap_content" />


    </LinearLayout>


</RelativeLayout>
